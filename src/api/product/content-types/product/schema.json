{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "tshirt",
        "mug",
        "jug",
        "helicopter",
        "bike"
      ],
      "default": "tshirt",
      "required": true
    },
    "size": {
      "type": "string"
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "red",
        "black",
        "green"
      ],
      "default": "red"
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "qty": {
      "type": "integer",
      "required": true
    }
  }
}
